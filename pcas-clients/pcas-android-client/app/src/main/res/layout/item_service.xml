<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/size5">

    <ImageView
        android:id="@+id/serviceIconView"
        android:layout_width="@dimen/serviceIconSize"
        android:layout_height="@dimen/serviceIconSize"
        android:background="@drawable/bg_oval"
        android:padding="@dimen/size5"
        tools:src="@drawable/ic_headset"
        tools:backgroundTint="#FEF7DF"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/serviceIconBadgeView"
        android:layout_width="@dimen/serviceIconBadgeSize"
        android:layout_height="@dimen/serviceIconBadgeSize"
        android:padding="@dimen/size1"
        android:background="@drawable/bg_oval"
        android:layout_marginTop="-8dp"
        app:tint="#8A000000"
        app:backgroundTint="@android:color/white"
        tools:src="@drawable/ic_check"
        tools:ignore="ContentDescription"
        />

    <TextView
        android:id="@+id/serviceNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:gravity="center_horizontal"
        android:alpha="@dimen/alphaEmphasisHigh"
        tools:text="Audio"
        />

    <TextView
        android:id="@+id/serviceDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:alpha="@dimen/alphaEmphasisHigh"
        android:gravity="center_horizontal"
        tools:text="A2dp: Connected\nHeadset: Connected"
        />
</LinearLayout>